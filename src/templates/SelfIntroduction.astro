---
import '@/components/Animation.css';

import path from 'path';

import { GradientText } from '@/components/GradientText';
import { Section } from '@/components/Section';

import { ExternalLink } from '@/components/ExternalLink';
import { SocialLinks } from '@/partials/SocialLinks';
import { MyIcon } from '@/components/MyIcon';
import { AppConfig } from '@/utils/AppConfig';

const iconPath = path.join(AppConfig.base, '/assets/images/my_icon_2.png');
---

<Section>
  <div
    class="flex flex-col items-center md:flex-row md:justify-between md:gap-x-24"
  >
    <div>
      <h1 class="hidden text-3xl font-bold md:block">
        Hi there, I'm <GradientText>Futa Hirakoba</GradientText> 👋
      </h1>

      <div class="flex flex-row justify-between md:hidden md:gap-x-24">
        {/* スマホ表示用 */}
        <h1 class="text-3xl font-bold">
          Hi there, <br />
           I'm <GradientText>Futa Hirakoba</GradientText> 👋
        </h1>
        <div class="my-icon h-20 w-20" id="my-icon-small">
          <MyIcon client:idle iconPath={iconPath} iconId="my-icon-small" />
        </div>
      </div>

      <p class="mt-6 text-xl leading-9">
        すべての開発者の生産性を向上したいソフトウェアエンジニアです。
        <ExternalLink title="サイボウズ株式会社" url="https://cybozu.co.jp/" />
         で働いています。CI/CD、IaC、Public Cloud 周りの技術が好きです。
      </p>

      <div class="mt-3 flex flex-wrap gap-1">
        <SocialLinks />
      </div>
    </div>

    <div class="hidden shrink-0 md:block">
      <div class="my-icon h-72 w-72" id="my-icon-large">
        <MyIcon client:idle iconPath={iconPath} iconId="my-icon-large" />
      </div>
    </div>
  </div>
</Section>
