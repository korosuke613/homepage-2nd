---
import path from "node:path";
import { DocSearch } from "@docsearch/react";
import { BsDice5, BsGithub, BsTwitter } from "react-icons/bs";
import { Logo } from "@/components/Logo";
import {
  NavbarTwoColumns,
  NavMenu,
  NavMenuExternalLink,
  NavMenuItem,
} from "@/components/Navbar";
import { Section } from "@/components/Section";
import { AppConfig } from "@/utils/AppConfig";
---

<Section>
  <NavbarTwoColumns>
    <a href={path.join(AppConfig.base, "/")}>
      <Logo icon={"💪"} name="korosuke613" />
    </a>

    <div class="flex items-center gap-x-0 font-medium text-gray-200">
      <NavMenu>
        <NavMenuItem href="posts">Posts</NavMenuItem>
        <NavMenuItem href="blogs">Blogs</NavMenuItem>
        <NavMenuItem href="slides">Slides</NavMenuItem>
        <NavMenuItem href="random">
          <BsDice5 size="20px" className="inline-block pb-0.5" />
        </NavMenuItem>
        <NavMenuExternalLink
          url="https://github.com/korosuke613"
        ><BsGithub size="20px" className="inline-block pb-0.5" /></NavMenuExternalLink>
        <NavMenuExternalLink
          url="https://twitter.com/shitimi_613"
        ><BsTwitter size="20px" className="inline-block pb-0.5" /></NavMenuExternalLink>
      </NavMenu>

      <!-- DocSearch のアイコンが遅れてロードされるため、同じサイズの div で囲む -->
      <div style="height: 36px; width: 48px">
        <DocSearch
          appId="YLT78H3I8T"
          indexName="draft_my_homepage"
          apiKey="ecd092a52e0fdaf9b5cc50f059bba8ea"
          client:only="react"
        />
      </div>
    </div>
  </NavbarTwoColumns>
  { /* NavbarTwoColumns が fixed となっているため、次の要素が被らないように見えないブロックを置く */}
  <div class="h-8 z-0 md:hidden" />
</Section>
