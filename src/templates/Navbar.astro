---
import path from 'path';
import { DocSearch } from '@docsearch/react';
import { Logo } from '@/components/Logo';
import {
  NavbarTwoColumns,
  NavMenu,
  NavMenuExternalLink,
  NavMenuItem,
} from '@/components/Navbar';
import { Section } from '@/components/Section';
import { AppConfig } from '@/utils/AppConfig';

export interface Props {}
---

<Section>
  <NavbarTwoColumns>
    <a href={path.join(AppConfig.base, '/')}>
      <Logo icon={'💪'} name="korosuke613" />
    </a>

    <div class="flex items-center gap-x-0 font-medium text-gray-200">
      <NavMenu>
        <NavMenuItem href="posts">Posts</NavMenuItem>
        <NavMenuItem href="blogs">Blogs</NavMenuItem>
        <NavMenuExternalLink
          title="GitHub"
          url="https://github.com/korosuke613"
        />
        <NavMenuExternalLink
          title="Twitter"
          url="https://twitter.com/shitimi_613"
        />
      </NavMenu>

      <!-- DocSearch のアイコンが遅れてロードされるため、同じサイズの div で囲む -->
      <div style="height: 36px; width: 36px">
        <DocSearch
          appId="YLT78H3I8T"
          indexName="draft_my_homepage"
          apiKey="ecd092a52e0fdaf9b5cc50f059bba8ea"
          client:only="react"
        />
      </div>
    </div>
  </NavbarTwoColumns>
</Section>
